<% unless notice.nil? %>
  <div class="row">
    <div class="ui positive message">
      <i class="close icon"></i>
      <div class="header">Success!</div>
      <p id="notice"><%= notice %></p>
    </div>
  </div>
<% end %>

<div class="row">
  <h1>New Check</h1>
</div>

<div class="ui divider"></div>

<div class="row">
  <p>
  <strong>Name:</strong>
  <%= @check.name %>
  </p>
</div>

<div class="row">
  <p>
  <strong>Interval:</strong>
  <%= @check.interval %>
  </p>
</div>

<div class="row">
  <p>
  <strong>Protocol:</strong>
  <%= @check.protocol %>
  </p>
</div>

<div class="row">
  <p>
  <strong>Url:</strong>
  <%= @check.url %>
  </p>
</div>

<div class="row">
  <h2>Percentiles</h2>
</div>

<div class="row ui grid stackable">
  <div class="eight wide column">
    <div class="three ui buttons">
      <%= link_to 'No filter', @check, class: "ui button attached #{percentile_active}" %>
      <%= link_to '95', check_path(@check, p: 0.95), class: "ui button attached #{percentile_active(value: 0.95)}" %>
      <%= link_to '75', check_path(@check, p: 0.75), class: "ui button attached #{percentile_active(value: 0.75)}" %>
    </div>
  </div>
</div>

<div class="row">
  <%= area_chart @chart_data, ytitle: "Response time" %>
</div>

<div class="row">
  <%= link_to 'Edit', edit_check_path(@check), class: 'ui button positive' %>
  <%= link_to 'Back', checks_path %>
</div>
